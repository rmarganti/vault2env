{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/rmarganti/vault2env/main/vault2env.schema.json",
    "title": "vault2env config",
    "description": "A configuration file for vault2env",
    "type": "object",

    "properties": {
        "presets": {
            "description": "Pre-configured pairs of origin and target sources",
            "type": "object",
            "patternProperties": {
                "^.*$": {
                    "$ref": "#/definitions/preset"
                }
            }
        }
    },

    "definitions": {
        "preset": {
            "type": "object",
            "properties": {
                "from": {
                    "description": "The origin source",
                    "type": "string"
                },
                "to": {
                    "description": "The target source",
                    "type": "string"
                }
            },
            "required": ["from", "to"]
        }
    }
}
